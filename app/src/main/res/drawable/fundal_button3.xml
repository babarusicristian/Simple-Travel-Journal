<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- when is pressed-->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1.2dip" android:color="#8db2bb" />
            <solid android:color="#327585"/>
        </shape>
    </item>

    <!-- when is disabled -->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="0dip" android:color="#132327" />
            <gradient android:angle="-90" android:startColor="#c5c5c5" android:endColor="#c5c5c5"  />
        </shape>
    </item>



    <!-- natural state -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#396a75" />
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
</selector>