<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="@dimen/space_10"
    app:cardBackgroundColor="#fffcf4"
    app:cardCornerRadius="@dimen/space_8"
    android:layout_height="wrap_content">

    <!-- for the background of card view -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/fundal_cardview" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_background_ripple_effect"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_travel_list_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_background_ripple_effect2"
            android:contentDescription="@null"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_view_trip_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/demo_trip_name_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_view_travel_list_picture"
            app:layout_constraintTop_toTopOf="@+id/image_view_travel_list_picture" />

        <TextView
            android:id="@+id/text_view_destination_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/demo_destination_subtitle"
            app:layout_constraintStart_toStartOf="@+id/text_view_trip_name_title"
            app:layout_constraintTop_toBottomOf="@+id/text_view_trip_name_title" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

